{
  "name": "copit",
  "version": "1.2.1",
  "description": "TUI tool for managing local file templates - register and copy config files to new projects",
  "module": "src/index.tsx",
  "type": "module",
  "private": false,
  "bin": {
    "copit": "./dist/index.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "cli",
    "tui",
    "template",
    "config"
  ],
  "author": "mrsekut",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mrsekut/copit.git"
  },
  "scripts": {
    "dev": "bun run src/index.tsx",
    "build": "bun run build.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write .",
    "test": "vitest",
    "check": "bun typecheck && bun lint && bun format && bun test",
    "prepublishOnly": "bun run build"
  },
  "dependencies": {
    "ink": "^5.0.1",
    "ink-text-input": "^6.0.0",
    "jotai": "^2.12.5",
    "react": "^18.3.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^22.10.5",
    "@types/react": "^18.3.18",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-react": "^7.37.3",
    "eslint-plugin-react-hooks": "^5.1.0",
    "prettier": "^3.4.2",
    "react-devtools-core": "^6.1.3",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  }
}
