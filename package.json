{
  "name": "copit",
  "version": "1.0.0",
  "description": "GitHub File Fetcher TUI - Download files from GitHub repositories with OAuth authentication, fuzzy search, and download history",
  "module": "src/index.tsx",
  "type": "module",
  "private": false,
  "bin": {
    "copit": "./dist/index.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "github",
    "cli",
    "download"
  ],
  "author": "mrsekut",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mrsekut/copit.git"
  },
  "bugs": {
    "url": "https://github.com/mrsekut/copit/issues"
  },
  "homepage": "https://github.com/mrsekut/copit#readme",
  "scripts": {
    "dev": "bun run src/index.tsx",
    "build": "bun build src/index.tsx --outdir dist --target node",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write .",
    "test": "vitest",
    "check": "bun typecheck && bun lint && bun format && bun test"
  },
  "dependencies": {
    "@octokit/auth-oauth-device": "^8.0.1",
    "@octokit/rest": "^21.0.2",
    "fuse.js": "^7.0.0",
    "ink": "^5.0.1",
    "ink-select-input": "^6.2.0",
    "ink-text-input": "^6.0.0",
    "jotai": "^2.12.5",
    "react": "^18.3.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^22.10.5",
    "@types/react": "^18.3.18",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-react": "^7.37.3",
    "eslint-plugin-react-hooks": "^5.1.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  }
}
